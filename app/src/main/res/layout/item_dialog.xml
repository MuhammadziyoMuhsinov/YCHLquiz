<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="@dimen/_250sdp"
    android:layout_height="@dimen/_250sdp"
    android:layout_gravity="center"
    app:cardCornerRadius="@dimen/_18sdp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="@dimen/_250sdp"
        android:layout_height="@dimen/_250sdp"
        >

        <ImageView
            android:id="@+id/img"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            android:src="@drawable/background1" />

        <TextView
            android:id="@+id/txt_correct"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/background_txt2"
            android:text="correct: 7"
            android:textColor="@color/black"
            android:textSize="@dimen/_23ssp"
            app:layout_constraintBottom_toTopOf="@id/txt_wrong"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/txt_wrong"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/background_txt2"
            android:text="wrong: 3"
            android:textColor="@color/black"
            android:textSize="@dimen/_23ssp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/txt_correct" />

        <TextView
            android:id="@+id/txt_ok"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/background_txt3"
            android:text="OK"
            android:textColor="@color/black"
            android:textSize="@dimen/_15ssp"
            android:layout_margin="@dimen/_15sdp"
            android:clickable="true"
            android:focusable="true"
            android:foreground="?selectableItemBackground"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintRight_toRightOf="parent"
           />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>